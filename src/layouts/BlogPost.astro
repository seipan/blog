---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  pubDate?: Date;
  updatedDate?: Date;
  heroImage?: string;
}

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
} = Astro.props;
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <article>
        <header>
          <a href="/" class="back-link">← blog.yadon3141.com</a>
          <h1>{title}</h1>
          {pubDate && <time>{pubDate.toLocaleDateString('ja-JP', { year: 'numeric', month: '2-digit', day: '2-digit' }).replace(/\//g, '-')}</time>}
          {
            updatedDate && (
              <div class="updated">
                最終更新日: <time>{updatedDate.toLocaleDateString('ja-JP', { year: 'numeric', month: '2-digit', day: '2-digit' }).replace(/\//g, '-')}</time>
              </div>
            )
          }
        </header>
        {heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
        <div class="content">
          <slot />
        </div>
      </article>
    </main>
  </body>
</html>

<style>
  body {
    background-color: #fff;
    color: #333;
  }
  
  main {
    max-width: 680px;
    margin: 0 auto;
    padding: 60px 20px;
  }
  
  article {
    width: 100%;
  }
  
  header {
    margin-bottom: 40px;
  }
  
  .back-link {
    color: #666;
    text-decoration: none;
    font-size: 14px;
    display: inline-block;
    margin-bottom: 20px;
  }
  
  .back-link:hover {
    color: #333;
  }
  
  h1 {
    font-size: 28px;
    font-weight: 600;
    margin: 0 0 12px 0;
    color: #333;
    line-height: 1.3;
  }
  
  time {
    color: #999;
    font-size: 14px;
    font-variant-numeric: tabular-nums;
  }
  
  .updated {
    margin-top: 8px;
    font-size: 13px;
    color: #999;
  }
  
  img {
    max-width: 100%;
    height: auto;
    border-radius: 4px;
    margin: 30px 0;
  }
  
  .content {
    font-size: 16px;
    line-height: 1.8;
  }
  
  /* Content typography */
  .content h2 {
    margin-top: 40px;
    margin-bottom: 16px;
  }
  
  .content h3 {
    margin-top: 32px;
    margin-bottom: 12px;
  }
  
  .content p {
    margin-bottom: 20px;
  }
  
  .content ul, .content ol {
    margin-bottom: 20px;
  }
  
  .content li {
    margin-bottom: 8px;
  }
  
  .content blockquote {
    margin: 20px 0;
  }
  
  .content pre {
    margin: 20px 0;
  }
  
  .content hr {
    margin: 40px 0;
  }
  
  /* Responsive */
  @media (max-width: 600px) {
    main {
      padding: 40px 16px;
    }
    
    h1 {
      font-size: 24px;
    }
    
    .content {
      font-size: 15px;
    }
  }
</style>