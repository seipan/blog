---
import { getCollection } from 'astro:content';
import '../styles/global.css';

const posts = await getCollection('blog');
posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// 日付フォーマット
const formatDate = (date: Date) => {
  const year = date.getFullYear();
  const month = String(date.getMonth() + 1).padStart(2, '0');
  const day = String(date.getDate()).padStart(2, '0');
  return `${year}/${month}/${day}`;
};
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>blog.yadon3141.com</title>
  </head>
  <body>
    <div class="container">
      <header>
        <h1>blog.yadon3141.com</h1>
      </header>
      
      <main>
        <ul class="posts">
          {
            posts.map((post) => (
              <li>
                <span class="date">{formatDate(post.data.pubDate)}</span>
                <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
              </li>
            ))
          }
        </ul>
      </main>
    </div>
  </body>
</html>

<style>
  /* Reset */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Base */
  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Hiragino Kaku Gothic ProN', 'Hiragino Sans', 'Yu Gothic UI', 'Meiryo', sans-serif;
    font-size: 18px;
    line-height: 1.7;
    color: #333;
    background-color: #fff;
  }

  /* Container */
  .container {
    max-width: 700px;
    margin: 0 auto;
    padding: 60px 20px;
  }

  /* Header */
  header {
    text-align: center;
    margin-bottom: 60px;
  }

  header h1 {
    font-size: 26px;
    font-weight: normal;
    color: #333;
  }

  /* Posts list */
  .posts {
    list-style: none;
  }

  .posts li {
    margin-bottom: 8px;
    display: flex;
    align-items: baseline;
    gap: 20px;
    padding-bottom: 8px;
    border-bottom: 1px solid #f0f0f0;
  }

  /* Date */
  .date {
    color: #999;
    font-size: 17px;
    font-variant-numeric: tabular-nums;
    flex-shrink: 0;
  }

  /* Links */
  .posts a {
    color: #1e90ff;
    text-decoration: none;
    font-size: 17px;
    line-height: 1.5;
  }

  .posts a:hover {
    text-decoration: underline;
  }

  /* Responsive */
  @media (max-width: 600px) {
    .container {
      padding: 40px 16px;
    }
    
    header {
      margin-bottom: 40px;
    }

    .posts li {
      flex-direction: column;
      gap: 2px;
      margin-bottom: 16px;
    }

    .date {
      font-size: 12px;
    }
  }
</style>